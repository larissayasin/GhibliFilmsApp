<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:clickable="true"
                                                   android:focusable="true"
                                                   android:background="?android:attr/selectableItemBackground">

    <TextView
            android:text="aaaaaa 54a"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_film_item_title"
            android:textSize="18sp" android:fontFamily="sans-serif-medium"
            app:layout_constraintStart_toEndOf="@+id/iv_film_item_poster"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_film_item_year" app:layout_constraintStart_toEndOf="@+id/tv_film_item_title"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/tv_film_item_title" android:layout_marginTop="4dp"
            android:text="anoanaajaasin"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_fil_item_director" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_film_item_title" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@id/view_film_item_div" android:fontFamily="sans-serif-light"
            android:text="aaaaa2121321" app:layout_constraintStart_toEndOf="@+id/iv_film_item_poster"
            android:layout_marginStart="8dp"/>

    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@android:color/darker_gray"
          android:id="@+id/view_film_item_div"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintVertical_bias="0.0"/>

    <ImageView
            android:layout_width="42dp"
            android:layout_height="42dp" app:srcCompat="@drawable/avatar_placeholder"
            android:id="@+id/iv_film_item_poster"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:scaleType="centerInside"
    />
</androidx.constraintlayout.widget.ConstraintLayout>